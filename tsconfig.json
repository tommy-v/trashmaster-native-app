{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES6",                          
    "module": "commonjs",
    "allowJs": true,                        
    "resolveJsonModule": true,
    "jsx": "react",                         
    "noEmit": true,                        
    "skipLibCheck": true,
/* Strict Type-Checking Options */
    "strict": true,                           
   

/* Module Resolution Options */
    "moduleResolution": "node",           
    "baseUrl": ".",                      
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true   
  },
  "exclude": [
    "./__tests__/" // exclude test files
  ]
}